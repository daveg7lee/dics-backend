{
  "name": "dics-backend",
  "version": "1.0.0",
  "description": "make backend server for dics website",
  "main": "index.js",
  "author": "Dave",
  "license": "MIT",
  "scripts": {
    "dev": "cd src && nodemon --exec ts-node server.ts -e ts,graphql",
    "migrate": "npx prisma migrate dev --preview-feature",
    "studio": "npx prisma studio",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "node dist/server"
  },
  "devDependencies": {
    "nodemon": "^2.0.6",
    "prisma": "^2.21.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.12.11",
    "@prisma/client": "^2.21.2",
    "apollo-cache-control": "0.10.1-alpha.0",
    "apollo-server": "^2.23.0",
    "apollo-server-fastify": "^3.0.0-alpha.3",
    "copy": "^0.3.2",
    "dotenv": "^8.2.0",
    "fastify": "^3.14.2",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "jsonwebtoken": "^8.5.1"
  },
  "resolutions": {
    "graphql": "^15.4.0"
  }
}
